@model WebApp9.Models.UserProfileViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit User</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="UserEmail"></label>
        <input asp-for="UserEmail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserFullName"></label>
        <input asp-for="UserFullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Bio"></label>
        <input asp-for="Bio" class="form-control" />
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />
</form>
