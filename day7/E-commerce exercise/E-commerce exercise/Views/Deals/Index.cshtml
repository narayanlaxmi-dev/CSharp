<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
</head>


<h2>Dates:</h2>
<ul>
    @foreach (var d in (List<DateOnly>)ViewData["date"])
    {
        <li>@d.ToString("yyyy-MM-dd")</li>  @* (2025, 6, 13) *@
    }
</ul>

<h2>Promotional Messages:</h2>
<ul>
    @foreach (var msg in ViewBag.PromotionalMessage)
    {
        <li>@msg</li>
    }
</ul>

@model IList<Deal>
<table class="text-center table align-content-center">
    <thead>
        <tr>
            <th class="table-success">Product Id</th>
            <th class ="table-success">Product Name</th>
            <th class="table-success">Product Discount</th>
            <th class="table-success">Product Available</th>
            <th class="table-success">DATE</th>
        </tr>
    </thead>
    
        @foreach (var product in Model)
        {
        <tr>
            <td class="table-info">@product.Id - </td>
            <td class="table-light">@product.ProductName </td>
            <td class="table-Warning">@product.Discount - </td>
            <td class="table-secondary">@product.isActive - </td>
            <td>
                @foreach (var d in (List<DateOnly>)ViewData["date"])
                {
                    <li>@d.ToString("yyyy-MM-dd")</li> 
                }
            </td>
        </tr>
        }
 
</table>
